generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  seller
}

enum MovementType {
  entrada
  saida
}

enum SaleStatus {
  pendente
  entregue
}

enum PaymentMethod {
  PIX
  CARTAO_CREDITO
  CARTAO_DEBITO
  DINHEIRO
}

enum AssistanceStatus {
  aberta
  concluida
}

model User {
  id           String          @id @default(cuid())
  name         String
  email        String          @unique
  phone        String?
  role         UserRole        @default(seller)
  passwordHash String
  active       Boolean         @default(true)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  movements    StockMovement[]
  sales        Sale[]          @relation("SaleCreatedBy")
  assistances  Assistance[]    @relation("AssistanceOwner")
}

model Client {
  id                  String   @id @default(cuid())
  name                String
  phone               String?
  cpf                 String?
  addressStreet       String?
  addressNumber       String?
  addressNeighborhood String?
  addressCity         String?
  addressNote         String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  sales               Sale[]
}

model Product {
  id        String          @id @default(cuid())
  name      String
  sku       String          @unique
  price     Float           @default(0)
  quantity  Int             @default(0)
  reserved  Int             @default(0)
  imageUrl  String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  items     SaleItem[]
  movements StockMovement[]
  assists   Assistance[]
}

model StockMovement {
  id        String        @id @default(cuid())
  product   Product       @relation(fields: [productId], references: [id])
  productId String
  user      User?         @relation(fields: [userId], references: [id])
  userId    String?
  type      MovementType
  amount    Int
  note      String?
  createdAt DateTime       @default(now())
}

model Sale {
  id           String         @id @default(cuid())
  publicId     String         @unique
  client       Client         @relation(fields: [clientId], references: [id])
  clientId     String
  createdBy    User?          @relation("SaleCreatedBy", fields: [createdById], references: [id])
  createdById  String?
  status       SaleStatus     @default(pendente)
  discount     Float          @default(0)
  note         String?
  deliveryDate DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  value        Float          @default(0)
  items        SaleItem[]
  payments     SalePayment[]
  assistances  Assistance[]
}

model SaleItem {
  id        String  @id @default(cuid())
  sale      Sale    @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  unitPrice Float
  discount  Float   @default(0)
}

model SalePayment {
  id           String        @id @default(cuid())
  sale         Sale          @relation(fields: [saleId], references: [id])
  saleId       String
  method       PaymentMethod
  amount       Float
  installments Int           @default(1)
}

model Assistance {
  id                 String            @id @default(cuid())
  code               String            @unique
  sale               Sale              @relation(fields: [saleId], references: [id])
  saleId             String
  product            Product           @relation(fields: [productId], references: [id])
  productId          String
  owner              User?             @relation("AssistanceOwner", fields: [ownerId], references: [id])
  ownerId            String?
  defectDescription  String
  factoryResponse    String?
  expectedDate       DateTime?
  status             AssistanceStatus  @default(aberta)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  photos             String[]
  notes              String?
}
